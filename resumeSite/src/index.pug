include includes/config.pug
doctype html
html
    head
        meta(charset = 'utf-8')
        meta(name='viewport', content="initial-scale=1.0, width=device-width")
        title=title
        link(href = 'css/style.css', rel = 'stylesheet')           
    body
        section#main
            #content
                include includes/header.pug
                block content
                    .aboutAreas.two-columns-auto
                        #photo
                            img(src='img/avatar.jpeg', alt='avatar')
                        #description
                            h2#personHello= helloText
                            h3= helloSubText
                            .three-columns-equal.info-links
                                a.link-info-1(href='resume.html')= resumeTitle
                                a.link-info-2(href='projects.html')= projectTitle
                                a.link-info-3(href='resume.html#skills')= skillsTitle
                            p= personInfo
        include includes/footer.pug
        script.
            const openMenu = () => document.querySelector('.navArea nav').style.display = 'inline-block';
            const closeMenu = () => document.querySelector('.navArea nav').style.cssText = null;